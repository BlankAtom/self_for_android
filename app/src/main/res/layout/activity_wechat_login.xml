<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".WeChatLoginActivity">

    <Button
        android:id="@+id/btn_wechat_close"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:text="关闭"
        android:textColor="@color/colorBlack"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp">

        <ImageView
            android:layout_width="24dp"
            android:src="@drawable/selficon"
            android:layout_height="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:text="self申请使用"
            android:textSize="14dp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="28dp"
    android:textColor="@color/colorBlack"
    android:textSize="20dp"
    android:text="你的微信头像、昵称、地区和性别信息"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="28dp"
        android:textColor="@color/colorWechat1"
        android:textSize="14dp"
        android:text="你可选择使用不同的个人信息登录"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"  />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp">

        <ImageView
            android:layout_width="44dp"
            android:src="@drawable/head_photo"
            android:layout_height="44dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="36dp"
                android:textSize="16dp"
                android:text="肉肉"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:text="微信个人信息"
                android:textColor="@color/colorWechat2"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:text="√"
            android:textColor="@color/colorWechat"
            android:textSize="32dp" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"  />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp">

        <Button
            android:layout_width="44dp"
            android:textSize="32dp"
            android:background="#00000000"
            android:textColor="@color/colorWechat2"
            android:text="+"
            android:layout_height="44dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-4dp"
            android:text="新建用户信息"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            />
        
        <Button
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="112dp"
            android:text=">"
            android:textColor="@color/colorWechat2"
            android:background="#00000000"
            android:textSize="32dp" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"  />
    
    <Button
        android:id="@+id/btn_wechat_admit"
        android:layout_width="156dp"
        android:layout_height="32dp"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="104dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_style_wechat1"
        android:text="同意"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/btn_wechat_refuse"
        android:layout_width="156dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="104dp"
        android:textColor="@color/colorWechat"
        android:background="@drawable/btn_style_wechat2"
        android:text="拒绝"
        android:textSize="16dp"/>

</LinearLayout>