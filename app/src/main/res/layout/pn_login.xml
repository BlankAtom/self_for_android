<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".PNLoginActivity">


    <Toolbar
        android:id="@+id/weibo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/x" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="16dp"
                android:text="手机号登录"
                android:textColor="@color/colorBlack"
                android:textSize="22dp" />

        </LinearLayout>
    </Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorBlack"
        android:textSize="22dp"
        android:text="登录体验更多精彩"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorWechat1"
        android:textSize="12dp"
        android:text="未注册手机号登录后将自动创建账号"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp">

        <Spinner
            android:id="@+id/spin_country_number"
            android:layout_width="104dp"
            android:layout_height="wrap_content">

        </Spinner>

        <EditText
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:textColor="@color/colorBlack"
            android:hint="输入手机号"
            android:background="#00000000"
            />

        <Button
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text="x"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_style3"/>

   </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/darker_gray"  />

    <Button

        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_style4"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:text="@string/phone_btn_next"/>

</LinearLayout>